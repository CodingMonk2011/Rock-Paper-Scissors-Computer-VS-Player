import java.util.Scanner;
import java.util.Random;
public class Main
{
	public static void main(String[] args) {
	    Scanner choice1 = new Scanner(System.in);
	    //Creating a place for the input to be in
        System.out.println("Wanna play rock paper scissors!");
        System.out.println("Type your choice!");
        String player1 = choice1.nextLine();
        System.out.println("Player 1: " + player1);
        //grabbing the data and storing it in our place
        String[]choices = {"Rock", "Paper", "Scissors"};
        Random randomGenerator = new Random();
        int randomIndex = randomGenerator.nextInt(choices.length);
        String Mychoice = choices[randomIndex];
        System.out.println("Me: "+ Mychoice);
        if (player1.equalsIgnoreCase(Mychoice)) {
            System.out.println("It's a tie!");
        } else if ((player1.equalsIgnoreCase("Rock") && Mychoice.equals("Scissors")) ||
           (player1.equalsIgnoreCase("Paper") && Mychoice.equals("Rock")) ||
           (player1.equalsIgnoreCase("Scissors") && Mychoice.equals("Paper"))) {
            System.out.println("You win!");
        } else {
            System.out.println("I win!");
        }
        
    }
}
